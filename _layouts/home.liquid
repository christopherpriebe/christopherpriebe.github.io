---
layout: base
---

<div class="container">
    <div id="bio" class="row">
        <div class="col-xs-12 text-center">
            <div class="row">
                <div class="col-xs-12 text-center-xs col-md-6 text-right-md">
                    <img src="{{ site.profile.image }}" alt="Headshot of Christopher Priebe" class="bio-pic img-circle">
                </div>
                <div class="col-xs-12 text-center-xs col-md-6 text-left-md">
                    <div class="h1">{{ site.profile.first_name }} {{ site.profile.middle_name }} {{ site.profile.last_name }}</div>
                    <div class="h4">{{ site.profile.title }}</div>
                    <div class="h5">{{ site.profile.affiliation }}, {{ site.profile.location }}</div>

                    {% if site.resume_home_icon %}
                        <a class="bio-social-icon-link" href="/cv/"><i class="fa-solid fa-rectangle-list bio-social-icon"></i></a> 
                    {% endif %}
                    {% for social in site.data.socials %}
                        {% if social[1].is_home_link %}
                            <a class="bio-social-icon-link" href={{ social[1].url }}><i class="{{ social[1].logo }} bio-social-icon"></i></a>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <hr style="margin-top: 20px; margin-bottom: 20px;">
        </div>
    </div>
    <div id="history" class="row row-sm-height-columns">
        <div class="col-xs-12 text-center">
            {% assign sorted_history = site.history | sort: "end_year" %}
            {% for item in sorted_history %}
                <div class="row row-no-gutters history-item">
                    <div class="col-xs-3 col-sm-1 col-md-1 text-right history-item-span">
                        <span>{{ item.start_year }} - {{ item.end_year }}</span>
                    </div>
                    <div class="col-xs-9 col-sm-4 col-md-2 text-center history-item-logo">
                        <div class="history-item-dot"></div>
                        <img src="{{ item.img }}" class="img-rounded img-responsive" alt="Logo for experience" class="company-logo">
                    </div>
                    <div class="col-xs-8 col-xs-offset-3 col-sm-7 col-sm-offset-0 col-md-9 col-md-offset-0 text-left history-item-content">
                        <p>{{ item.content }}</p>
                    </div>
                </div>
            {% endfor %}
        </div> 
    </div>
</div>
