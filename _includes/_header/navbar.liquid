<!-- Create navigation bar with Bootstrap 3 -->
<nav id="navbar" class="navbar navbar-default">
    <div class="container-fluid">
        {% unless page.url == "/" %}
            <div class="navbar-header">
                <a class="navbar-brand" href="/">{{ site.title }}</a>
            </div>
        {% endunless %}
        <ul class="nav navbar-nav navbar-right">
            {% assign sorted_site_pages = site.pages | sort: "nav_order" %} 
            {% for site_page in sorted_site_pages %}
                {% if site_page.nav %}
                    <li><a href={{ site_page.url | relative_url }}>{{ site_page.title }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</nav>
